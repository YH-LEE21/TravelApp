<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.TravelDay.RegisterActivity"
    >


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="TravelDay"
        android:textColor="@color/MainColor"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="#80ff000f"
        android:textSize="35sp"
        android:layout_below="@id/textView6"
        />

    <Button
        android:id="@+id/btn_validateID"
        android:layout_width="88dp"
        android:layout_height="37dp"
        android:backgroundTint="#80ff000f"
        android:text="중복확인"
        android:textSize="12sp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_alignRight="@id/et_id"
        android:layout_below="@id/textView4"
        />
    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:hint="아이디"
        android:inputType="textPersonName"
        android:layout_below="@id/textView4"
        />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_id"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/et_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_name"
        android:ems="10"
        android:hint="나이"
        android:layout_marginTop="40dp"
        android:inputType="number"

    />
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pass"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:hint="이름"
        android:inputType="textPersonName"

        />
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_age"
        android:backgroundTint="#80ff000f"
        android:text="회원가입"

        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        />


</RelativeLayout>