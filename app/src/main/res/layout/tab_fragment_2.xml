            android:layout_weight="1"
            />
    <Button

        android:id="@+id/btnCalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="경비계산"
        android:textColor="@color/white"
        android:background="@color/MainColor"
        />
